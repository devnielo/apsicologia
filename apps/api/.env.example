# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=0.0.0.0

# Database
MONGODB_URI=mongodb://admin:password123@localhost:27017/apsicologia?authSource=admin
MONGODB_DB_NAME=apsicologia

# Redis
REDIS_URL=redis://:redispassword123@localhost:6379

# JWT Secrets (generate strong secrets for production)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@apsicologia.com

# File Storage (MinIO)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=apsicologia
MINIO_USE_SSL=false

# External Services (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=your_jitsi_app_id
JITSI_JWT_SECRET=your_jitsi_jwt_secret

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Application
APP_NAME=apsicologia
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
